{
  "name": "openmux",
  "version": "0.2.56",
  "description": "Terminal multiplexer with master-stack tiling layout",
  "module": "src/index.tsx",
  "type": "module",
  "bin": {
    "openmux": "./bin/openmux"
  },
  "files": [
    "bin",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "start": "bun run build && ./dist/openmux",
    "dev": "bun run --watch src/index.tsx",
    "typecheck": "tsc --noEmit",
    "build": "./scripts/build.sh",
    "build:release": "./scripts/build.sh --release",
    "install:local": "./scripts/build.sh --install",
    "prepare": "effect-language-service patch",
    "test": "vitest run && (cd zig-pty && zig build test --summary all) && ./scripts/test-ghostty-vt.sh",
    "test:ts": "vitest run",
    "test:zig": "cd zig-pty && zig build test --summary all",
    "test:ghostty-vt": "./scripts/test-ghostty-vt.sh",
    "test:watch": "vitest",
    "check:circular": "bunx madge --circular --extensions ts,tsx src/",
    "lint:effect": "effect-language-service diagnostics --format pretty --project ./tsconfig.json",
    "lint:ts": "eslint src",
    "lint": "bun run lint:effect && bun run lint:ts",
    "config:doc": "bun scripts/generate-config-doc.ts",
    "release": "standard-version",
    "release:minor": "standard-version --release-as minor",
    "release:major": "standard-version --release-as major",
    "release:patch": "standard-version --release-as patch",
    "release:first": "standard-version --first-release",
    "publish:npm": "./scripts/publish.sh"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/monotykamary/openmux.git"
  },
  "author": "monotykamary",
  "license": "MIT",
  "homepage": "https://github.com/monotykamary/openmux#readme",
  "bugs": {
    "url": "https://github.com/monotykamary/openmux/issues"
  },
  "keywords": [
    "terminal",
    "multiplexer",
    "tui",
    "tmux",
    "zellij",
    "bun",
    "opentui"
  ],
  "engines": {
    "bun": ">=1.0.0"
  },
  "devDependencies": {
    "@effect/eslint-plugin": "^0.3.2",
    "@effect/language-service": "^0.60.0",
    "@effect/vitest": "^0.27.0",
    "@types/bun": "latest",
    "@typescript-eslint/eslint-plugin": "^8.50.0",
    "@typescript-eslint/parser": "^8.50.0",
    "@vitest/coverage-v8": "^4.0.16",
    "eslint": "^9.39.2",
    "standard-version": "^9.5.0",
    "vitest": "^4.0.16"
  },
  "peerDependencies": {
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@effect/cli": "^0.72.1",
    "@effect/platform": "^0.93.8",
    "@iarna/toml": "^3.0.0",
    "@opentui/core": "^0.1.62",
    "@opentui/solid": "^0.1.62",
    "effect": "^3.19.13",
    "solid-js": "^1.9.10"
  }
}
