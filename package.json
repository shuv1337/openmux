{
  "name": "openmux",
  "version": "0.1.15",
  "description": "Terminal multiplexer with master-stack tiling layout",
  "module": "src/index.tsx",
  "type": "module",
  "bin": {
    "openmux": "./bin/openmux"
  },
  "files": [
    "bin",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "start": "bun run src/index.tsx",
    "dev": "bun run --watch src/index.tsx",
    "typecheck": "tsc --noEmit",
    "build": "./scripts/build.sh",
    "build:release": "./scripts/build.sh --release",
    "install:local": "./scripts/build.sh --install",
    "prepare": "effect-language-service patch",
    "test": "vitest run",
    "test:watch": "vitest",
    "release": "standard-version",
    "release:minor": "standard-version --release-as minor",
    "release:major": "standard-version --release-as major",
    "release:patch": "standard-version --release-as patch",
    "release:first": "standard-version --first-release",
    "publish:npm": "./scripts/publish.sh"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/monotykamary/openmux.git"
  },
  "author": "monotykamary",
  "license": "MIT",
  "homepage": "https://github.com/monotykamary/openmux#readme",
  "bugs": {
    "url": "https://github.com/monotykamary/openmux/issues"
  },
  "keywords": [
    "terminal",
    "multiplexer",
    "tui",
    "tmux",
    "zellij",
    "bun",
    "opentui"
  ],
  "engines": {
    "bun": ">=1.0.0"
  },
  "devDependencies": {
    "@effect/language-service": "^0.60.0",
    "@effect/vitest": "^0.27.0",
    "@types/bun": "latest",
    "@types/react": "^19.2.7",
    "standard-version": "^9.5.0",
    "vitest": "^4.0.15"
  },
  "peerDependencies": {
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@effect/cli": "^0.72.1",
    "@effect/platform": "^0.93.6",
    "@opentui/core": "^0.1.57",
    "@opentui/react": "^0.1.57",
    "bun-pty": "^0.4.2",
    "effect": "^3.19.9",
    "ghostty-web": "^0.3.0",
    "react": "^19.2.1"
  }
}
