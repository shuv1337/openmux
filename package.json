{
  "name": "openmux",
  "version": "0.1.0",
  "description": "Terminal multiplexer with BSP layout using OpenTUI",
  "module": "src/index.tsx",
  "type": "module",
  "private": true,
  "bin": {
    "openmux": "./src/index.tsx"
  },
  "scripts": {
    "start": "bun run src/index.tsx",
    "dev": "bun run --watch src/index.tsx",
    "typecheck": "tsc --noEmit",
    "build": "./scripts/build.sh",
    "install:local": "./scripts/build.sh --install",
    "prepare": "effect-language-service patch"
  },
  "devDependencies": {
    "@effect/language-service": "^0.60.0",
    "@types/bun": "latest",
    "@types/react": "^19.2.7"
  },
  "peerDependencies": {
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@effect/cli": "^0.72.1",
    "@effect/platform": "^0.93.6",
    "@opentui/core": "^0.1.57",
    "@opentui/react": "^0.1.57",
    "bun-pty": "^0.4.2",
    "effect": "^3.19.9",
    "ghostty-web": "^0.3.0",
    "react": "^19.2.1"
  }
}
